<%= erb :"common/header_mentorA" %>
<div class="background" id="statement">
  
      <div class="full">
        <h2>Mentee Applications</h2>
        <p>You can only accept 1 mentee application!</p>
        <div class="user_info">
          <!-- Displays all the mentee applications the mentor has -->
          <% if @menteeIDList.count > 0 %>
              <h2>Mentee Information:</h2>
              <table id="MenteeApplications">
                <tr id="TableHeadings">
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone Number</th>
                  <th>Course Year</th>
                  <th>Course Name</th>
                  <th>Description</th>
                  <th>Accept application</th>
                </tr>
               <!-- Details of each mentee displayed -->
              <% @menteeIDList.each do |mentee| %>
                <tr>
                  <td><%= h mentee.name %></td>
                  <td><%= h mentee.email %></td>
                  <td><%= h mentee.phoneNum %></td>
                  <td><%= h mentee.cyear %></td>
                  <td><%= h mentee.courseName %></td>
                  <td><%= h mentee.description %></td>
                  <td>
                    <form method="post" action="match">
                      <input type="hidden" name="menteeID" value="<%= mentee.id %>">
                      <input type="hidden" name="mentorID" value="<%= $mentors %>">
                      <button type="submit">
                        Accept application
                      </button>
                    </form>
                  </td>
                </tr>
              <% end %> 
              </table>
            <% else %>
              <p id="SearchError">There are no mentee applications</p>
            <% end %>
         </div>
     </div>
  
</div> 

<%= erb :"common/footer" %>
