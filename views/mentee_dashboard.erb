<%= erb :"common/header_menteeA" %>
<div class="background" id="statement">
  
      <div class="full" id="dashboard">
        <h2>Mentee Dashboard</h2>
        <div id="dashboardBody">
          <aside class="lSide">
            <!-- Displays the details of the mentee logged in -->
            <div class="user_info">
              <h3>My Info</h3>
              <p><b>Name: </b> <i><%= h $mentees.name %></i></p>
              <p><b>Email: </b> <i><%= h $mentees.email %></i> </p>
              <p><b>Phone Number: </b> <i><%= h $mentees.phoneNum %></i></p>
              <p><b>Course Name: </b> <i><%= h $mentees.courseName %></i> </p>
              <p><b>Course Name: </b> <i><%= h $mentees.faculty %></i> </p>
              <p><b>Course Year: </b> <%= h $mentees.cyear %> </p>
              <p><b>Description: </b> <%= h $mentees.description %> </p>
            </div>
          </aside>

          <aside class="rSide">
            <div class="full" id="searchOptions">
              <h3>Options</h3>
              <p class="search_info"><a href="/search" class="link">Find a mentor</a></p>
              <p class="search_info"><a href="/sentMentorApplications" class="link">View mentor applications</a></p>
              <p><a href="/editMentee?id=<%= h $mentees.id %>">Edit Profile</a></p>
            </div>
            
            <div class="full" id="searchOptions">
              <h3>My Mentor</h3>
              <p class="search_info"><a href="/myMentor" class="link">My Mentor</a></p>
              <p>Write Comments</p>
              <p class="search_info"><a href="/myMenteeA" class="link">Read Comments</a></p>
            </div>
          </aside>
          
         
        </div>
     </div>
  
</div> 

<%= erb :"common/footer" %>
