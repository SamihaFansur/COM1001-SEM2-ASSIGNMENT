<%= erb :"common/header_adminA" %>
    <div class="background" id="statement">
      <div class="full">
        <div class="title"><h3>Search for a <strong>Paired</strong> Mentee</h3></div> <!--Main page Title-->  

          <form>
            <p>Enter a <strong>FACULTY</strong> to search in: 
              <!-- Gets the search value(mentee faculty) to be searched -->
              <input type="text" name="faculty_search" id="searchForMentee" placeholder="Enter a faculty to search..." maxlength="40" size="30" value="<%= h @faculty_search %>"/>
              <input type="submit" value="Submit" />
            </p>
          </form>
          
          <p>Paired Mentees: <%= @mentees.count %></p>
        
          <!--Displays mentee details-->
          <% if @mentees.count > 0 %>
            <table class="display_table">
              <tr id="TableHeadings">
                <th>Name</th>
                <th>Email</th>
                <th>Faculty</th>
                <th>Matched Mentor Name</th>
                <th>Matched Mentor Email</th>
              </tr>
            <% (0...@mentees.count).each do |menteeMentor| %>
              <tr>
                <td><%= @menteesList[menteeMentor][0] %></td>
                <td><%= @menteesList[menteeMentor][1] %></td>
                <td><%= @menteesList[menteeMentor][2] %></td>
                <td><%= @mentors[menteeMentor][0] %></td>
                <td><%= @mentors[menteeMentor][1] %></td>
              </tr>
            <% end %> 
            </table>
          <% else %>
            <p id="SearchError">No mentees appear to be paired with a mentor.</p>
          <% end %>
      </div>
</div>

<%= erb :"common/footer" %>
