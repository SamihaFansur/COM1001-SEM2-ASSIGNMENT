<%= @header %>
<div class="background" id="statement">
    <div class="full">
        <div class="title">
            <h1>Admin Help</h1>
        </div>
          <div class="helpBody">
            <h2 class="description">If you forget password please contact an admin.</h2>
          <div class="helpForm">  
              <h2>Contact Admin: </h2>

              <form name="myform" action="https://www.dcs.shef.ac.uk/cgi-intranet/public/FormMail.php" method="POST" onsubmit="alert('Email will be sent now...');" >
                <input type="hidden" name="recipients" value="egoodbrand1@sheffield.ac.uk">
                   <div class="user">   
                    <p>
                      <label for="realname">Your name:</label>
                      <input type="text" name="realname" id="name" maxlength="40" size="30" placeholder="Enter your name..."  required><!--Mandatory field-->
                    </p>

                    <p>
                      <label for="email">E-mail:</label>
                      <input type="email" name="email" id="email" placeholder="Enter your email..." maxlength="40" size="30" required><!--Mandatory field-->
                    </p>

                     <p>
                        <label for="username" class="options">Username: </label>
                        <input disabled type="text" name="username" id="username" placeholder="Enter your username..." maxlength="40" size="30" value="">
                      </p>

                      <p>
                        <label for="password" class="options">Password: </label>
                        <input type="password" name="password" id="password" placeholder="Enter your password..." maxlength="40" size="30" value="">
                      </p>   

                    <!--Submit/Reset buttons-->
                    <p>
                      <input type="submit" id="help_submit" value="Submit">
                      <input type="reset" id="help_reset" value="Reset">
                    </p>
                 </div>
              </form>
       </div>
    </div>
  </div>
</div>               


<%= erb :"common/footer" %>