<%= @header %>
<div class="background" id="statement">
    <div class="full" id="">
        <div class="title">
              <h2>Password Reset</h2>
        </div>
          <div class="helpBody">
            <h3 class="description">If you forgot your password please contact an admin to reset your password.</h3>
          <div class="helpForm">  
              <!-- send email to the admins so that admins could change the password of users               -->
              <form name="myform" action="https://www.dcs.shef.ac.uk/cgi-intranet/public/FormMail.php" method="POST" onsubmit="alert('Email will be sent now...');" >
                <input type="hidden" name="recipients" value="egoodbrand1@sheffield.ac.uk">
                   <div class=                          "user">
                   <!--Write down the your used information of E-mail                  -->
                    <p>
                      <label for="email" class="options">E-mail:</label>
                      <input type="email" name="email" id="email" placeholder="Enter your email..." maxlength="40" size="30" required><!--Mandatory field-->
                    </p>
                    <!--Write down the your used information of username                  -->
                     <p>
                       <label for="username" class="options">Username: </label>
                       <input type="text" name="username" id="username" placeholder="Enter your username..." maxlength="40" size="30" value="">
                     </p>

                     <!--Write down the your new password for the used account                   -->
                     <p>
                       <label for="password" class="options">New Password: </label>
                       <input type="password" name="password" id="password" placeholder="Enter your password..." maxlength="40" size="30" value="">
                     </p>   

                    <!--Submit/Reset buttons-->
                    <p>
                      <input type="submit" value="Submit">
                      <input type="reset" value="Reset">
                    </p>
                 </div>
              </form>
       </div>
    </div>
  </div>
</div>               


